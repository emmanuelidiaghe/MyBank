@model MyBank.Models.Login;

@{
    ViewData["Title"] = "Login Page";
}

<div class="img js-fullheight" style="background-image: url(~wwwroot/images/bg.jpg);">
    <section class="ftco-section">
        <div class="">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section mt-5">MyBank</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Login Page</h3>
                        @if(Model != null)
                        {
                            @if (Model.loginErrorCheck) { <p class="text-danger mb-2">@Model.LoginError</p> }
                        }

                        @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
                        {
                            <div class="signin-form" id="appointment-form">
                                <div class="form-group-1">
                                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email or Phone", @class = "bvn", @id = "email", @required = "required" })
                                    @Html.TextBoxFor(m => m.Password, new { type = "password", @placeholder = "Password", @class = "password", @id = "password", @required = "required" })
                                </div>
                                <div class="form-submit">
                                    <input type="submit" name="submit" id="submit" class="submit" value="Login" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</div>